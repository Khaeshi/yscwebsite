const team = [
  {
    name: "Desiree Tablante",
    role: "YSC Co-Builder, Administrative & Operations Management, Program Consultant, Culinary Program Specialist, Client/Student relations expert, IT Consultant.",
    image: Desiree,
    bio: "With 20+ years of Management Expertise and Graduate of Mapua Insitute of Technology; BS Industrial Engineering."
  },
  {
    name: "Silayan Pallones",
    role: "YSC Builder, Program Head",
    image: Silayan,
    bio: `Associate in Music Ministry, major in Voice. She's a Graduate of Bob Jones University, 
          Greenville, SC, USA. A Multi-skilled musician, Recording Artist, Choir Conductor, Composer, Lyricist, Performer, Resourse Speaker, Educator, 
          Visual Artist, and Music Producer`
  },
  {
    name: "Katherine Kay Brutas",
    role: "Violin Teacher",
    image: Katherine,
    bio: `Well- experienced Violin Teacher/Coach
          Experienced Piano Teacher 
          Orchestra Assitant Conductor
          Orchestra Principal Player
          PH-based & International Students 
          Coach for Student Conventions 
          Skilled Arts Teacher/ Coach 
          Bachelor of Music Education
          St. Scholastica’s College`
  }
];


const milestones = [
  {
    year: "2010",
    title: "The Beginning",
    description: "Our humble beginnings took off in this year through the efforts of Ms. Silayan as a simple home service for music lessons."
  },
  {
    year: "2013",
    title: "Expansion",
    description: "Silayan Music Studio was born and had a great leap to what is now called Young Starter Club."
  },
  {
    year: "2015",
    title: "Diversification",
    description: "Introduced cooking sessions and photography classes, and Badminton in collaboration with Jefferson Tablante Training Camp(JTTC) becoming a true multi-disciplinary learning center."
  },
  {
    year: "2020",
    title: "Innovation",
    description: "Adapted to hybrid learning models, ensuring continued education during challenging times."
  },
  {
    year: "2026",
