---

import { ParallaxHero } from '../components/ParallaxHero.tsx';
import { ParallaxSection } from '../components/ParallaxSection.tsx';
import  Layout  from '../layouts/Layout.astro';
import { Heart, Target, Users, Award, Sparkles } from 'lucide-react';
import { aboutimageUrl, Desiree, Katherine, Silayan } from "../config.ts";
import CoreValuesCarousel from '../components/CoreValuesCarousel.tsx';

interface TeamMember {
  name: string;
  role: string;
  bio: string;
  image: string;
}
interface LeadershipTeamProps {
  team: TeamMember[];
}

interface Foundation {
  title: string;
  subtitle?: string;
  details?: string;
}

interface CoreValuesProps {
